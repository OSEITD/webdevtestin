# Environment Variables Template for WD Parcel Send Receiver PWA
# Copy this file to .env and fill in your actual values
# NEVER commit .env to version control - keep your secrets safe!

# ========================================
# APPLICATION CONFIGURATION
# ========================================
APP_ENV=production
APP_DEBUG=false
APP_URL=https://your-app-name.onrender.com
DEFAULT_TIMEZONE=Africa/Lusaka
DEFAULT_CURRENCY=ZMW
SESSION_TIMEOUT=1800

# ========================================
# SUPABASE CONFIGURATION
# ========================================
# Get these from your Supabase project settings > API
SUPABASE_URL=https://xerpchdsykqafrsxbqef.supabase.co
SUPABASE_ANON_KEY=your_supabase_anon_key_here
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key_here

# ========================================
# PAYMENT CONFIGURATION (LENCO)
# ========================================
# Get these from your Lenco dashboard
LENCO_PUBLIC_KEY=your_lenco_public_key_here
LENCO_SECRET_KEY=your_lenco_secret_key_here
LENCO_WEBHOOK_SECRET=your_lenco_webhook_secret_here
LENCO_BASE_URL=https://api.lenco.co/v1

# ========================================
# PUSH NOTIFICATIONS (WEB PUSH VAPID KEYS)
# ========================================
# Generate with: npx web-push generate-vapid-keys
VAPID_PUBLIC_KEY=your_vapid_public_key_here
VAPID_PRIVATE_KEY=your_vapid_private_key_here
VAPID_SUBJECT=mailto:admin@yourcompany.com

# ========================================
# SECURITY KEYS
# ========================================
# Generate random 32-character strings for these
JWT_SECRET=your_jwt_secret_32_chars_minimum
ENCRYPTION_KEY=your_32_character_encryption_key
CSRF_TOKEN_NAME=csrf_token

# ========================================
# EMAIL/SMTP CONFIGURATION (OPTIONAL)
# ========================================
# For system notifications and password resets
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_app_password_here
SMTP_FROM_EMAIL=noreply@yourcompany.com
SMTP_FROM_NAME="WD Parcel System"

# ========================================
# API RATE LIMITING
# ========================================
RATE_LIMIT_ENABLED=true
RATE_LIMIT_MAX_ATTEMPTS=100
RATE_LIMIT_WINDOW=60

# ========================================
# GPS TRACKING CONFIGURATION
# ========================================
GPS_UPDATE_INTERVAL=30  # seconds
GPS_ACCURACY_THRESHOLD=100  # meters
LOCATION_RETENTION_DAYS=90

# ========================================
# MULTI-TENANT CONFIGURATION
# ========================================
# Default settings for new companies
DEFAULT_COMPANY_CURRENCY=ZMW
DEFAULT_DELIVERY_FEE=25.00
DEFAULT_COMMISSION_RATE=5.0  # percentage

# ========================================
# FILE STORAGE CONFIGURATION
# ========================================
# For uploaded files, barcodes, etc.
UPLOAD_MAX_SIZE=50M
STORAGE_PATH=/var/www/html/storage
BARCODE_STORAGE_PATH=/var/www/html/storage/barcodes

# ========================================
# LOGGING CONFIGURATION
# ========================================
LOG_LEVEL=info
LOG_RETENTION_DAYS=30
ERROR_REPORTING=false  # Set to true only for debugging

# ========================================
# RENDER.COM DEPLOYMENT NOTES
# ========================================
# 1. Go to Render Dashboard > Your Service > Environment
# 2. Add each variable above (except comments)
# 3. For secrets, click "Generate" or paste your actual values
# 4. Save and redeploy
# 
# IMPORTANT: Never commit real values to GitHub!
